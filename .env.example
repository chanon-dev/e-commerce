# Environment Configuration
NODE_ENV=development

# Database Configuration
DB_HOST=postgresql
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=ecommerce

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB Configuration
MONGODB_URI=mongodb://admin:admin@mongodb:27017/ecommerce?authSource=admin

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h

# API Gateway Configuration
API_GATEWAY_PORT=8080
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3100

# Service Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
CART_SERVICE_PORT=3006
INVENTORY_SERVICE_PORT=3007
SHIPPING_SERVICE_PORT=3008
PROMOTION_SERVICE_PORT=3009
REVIEW_SERVICE_PORT=3010
NOTIFICATION_SERVICE_PORT=3011
ADMIN_SERVICE_PORT=3012

# Frontend Ports
CUSTOMER_PLATFORM_PORT=3000
ADMIN_DASHBOARD_PORT=3100

# External Service APIs
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@yourstore.com
FROM_NAME=E-commerce Store

# SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Shipping APIs
FEDEX_API_KEY=your_fedex_api_key
UPS_API_KEY=your_ups_api_key
DHL_API_KEY=your_dhl_api_key

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_PORT=16686
KIBANA_PORT=5601

# Security
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=dev-token
KEYCLOAK_URL=http://keycloak:8080

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_APP_NAME=E-commerce Store
NEXT_PUBLIC_APP_DESCRIPTION=Your one-stop online shopping destination
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3100

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# Feature Flags
FEATURE_REVIEWS_ENABLED=true
FEATURE_WISHLIST_ENABLED=true
FEATURE_PROMOTIONS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
